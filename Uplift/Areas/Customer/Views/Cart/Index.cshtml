@model Uplift.Models.ViewModels.CartViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post">
    @if (Model.ServiceList.Count > 0)
    {
        <br/>
        <div class="backgroundWhite container">
            <div class="card">
                <div class="card-header bg-dark text-light ml-0 row container">
                    <div class="col-12 d-none d-md-block col-md-6 pb-1">
                        <i class="fa fa-shopping-cart"></i>&nbsp; Shopping Cart
                    </div>
                    <div class="col-12 col-md-4 offset-md-2 text-right bg-dark">
                        <a asp-action="Index" asp-controller="Home" asp-area="Customer" class="btn btn-primary form-control btn-sm"><i class="fa fa-shopping-cart"></i>&nbsp; Shopping Cart</a>
                    </div>
                </div>
                <div class="card-body">
                    @{ 
                        var orderTotal = 0.0;
                    }

                    @foreach(var item in Model.ServiceList)
                    {
                        orderTotal += (item.Price * item.Frequency.FrequencyCount);

                        <div class="row">
                            <div class="d-none d-md-block col-md-2 text-center py-3">
                                <img src="@item.ImageUrl" class="rounded" style="width: 100%;" />
                            </div>
                            <div class="col-12 col-md-5 text-md-left pt-3">
                                <h5><strong class="text-primary">@item.Name</strong></h5>
                                <h5 class="text-secondary">@item.Price</h5>
                                <h5 class="text-primary"><small>@item.Frequency.Name</small></h5>
                            </div>
                            <div class="col-12 col-md-5 row">
                                <div class="col-6 text-md-right" style="padding: 5px;">
                                    <h6><strong class="text-danger">@((item.Price * item.Frequency.FrequencyCount).ToString("c"))</strong></h6>
                                </div>
                                <div class="col-5 text-right">
                                    <button type="submit" class="btn btn-outline-danger" asp-action="remove" asp-route-serviceId="@item.Id">
                                        <i class="fa fa-trash"></i>
                                    </button> 
                                </div>
                            </div>
                        </div>
                    }

                    <div class="row">
                        <div class="col-12 text-right pr-4">
                            <p class="text-success h5">Total (USD): &nbsp; &nbsp; $@orderTotal</p>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="col-12 col-md-6 offset-md-6 col-lg-4 offest-lg-8 text-right">
                        <a asp-action="Summary" asp-area="Customer" asp-controller="Cart" class="btn btn-success form-control">Summary</a>
                    </div>
                </div>
            </div>
        </div>
        } 
        else
        {
            <div class="backgroundWhite">No items aded to the shopping cart...</div>
        }
</form>

